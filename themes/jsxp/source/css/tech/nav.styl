.mesh_nav
    overflow: hidden
    a
        text-decoration: none
    .sub-category
        padding: 20px 30px
        background:#38b7ea
        margin-bottom: 20px
        .title
            font-size: 18px
            padding-top:12px
            color:#4d4d4d
            font-weight: 500
            i 
                font-size: 18px
    .item
        border-radius: 6px
        background: #fff
        padding: 10px
        margin-top: 22px
        border: 1px solid #e4ecf3
        box-shadow: 1px 2px 3px #f2f6f8
        transition:.4s
        &:hover
            transform: translateY(-6px)
            -webkit-transform: translateY(-6px)
        .logo
            height: 40px
            position: relative
            font-size: 14px
            font-weight: 700
            color: #3273dc
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
            width:100%
        .desc
            color: gray
            font-size: 12px
            height: 35px
            overflow: hidden
            text-overflow: ellipsis
            display: -webkit-box
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical

