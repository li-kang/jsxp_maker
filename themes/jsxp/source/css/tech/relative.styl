.materials
    &>div
        padding:0 10px
        margin-bottom:15px
        dl    
            background-color: #eaeaea
            border-radius: 8px
        dt
            float:left
            text-align: center
            padding:10px 0 0 10px
            h2
                font-size 16px
                font-weight:600 

            p
                font-size:14px
                line-height:30px
        dd
            float:right
            img
                display: inline-block
                height: 85px
                max-width:100%
        .clear
            clear:both

.books
    &>div
        border-top:1px solid #eee
    dl:nth-of-type(1)
        padding:0
        img
            height: 150px
            max-width:100%
            padding-top:10px
    dl:nth-of-type(2)
        dt  
            margin:15px 0
            font-weight:600
        dd
            // overflow:hidden
            // text-overflow:ellipsis
            // display:-webkit-box
            // -webkit-box-orient:vertical
            // -webkit-line-clamp:2  /*表示需要显示的行数*/
        .down_btn
            margin:10px 0
            a 
                text-decoration: none
                display: block
                padding:5px 15px
                border:1px solid #eaeaea
                border-radius:3px
                margin-top:-7px
            .clear
                clear:both
            
                 
                
   
    
        
        
            
               
        
            
        
            

    