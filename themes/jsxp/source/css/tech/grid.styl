#animatedModal
  .close
    position:absolute
    right:38px
    top:10px
    overflow:hidden
    z-index: 10
    cursor:pointer
    img 
      border-radius:50%

  .modal-content
    height:100vh
.grid

  .row
    margin:0
    padding:0
  .item
    padding:10px 0
    &:hover p
      color:#006bde
    p 
      color:#444
      word-wrap: break-word
      line-height:1.2rem
    a
      display: block
      text-decoration:none
      dd  
        overflow:hidden
        span 
          display: block
          width:100%
          height:150px
          background-size: cover
          transition: all 0.5s
      dt   
        color:#006bde
        margin:7px 0

    &:hover dd span
      transform: scale(1.2)


     
      


    


    
